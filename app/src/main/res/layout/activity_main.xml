<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/lovebg"
    tools:conloveimgtext="com.standarstudio.lovecalculator.MainActivity">
<ImageView
    android:id="@+id/loveimg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/love"
    android:layout_marginBottom="40dp"
   android:layout_above="@+id/title_tag"
    android:layout_centerHorizontal="true" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/title_tag"
    android:layout_marginBottom="30dp"
    android:textSize="30sp"
    android:textColor="@color/colorPrimary"
    android:layout_above="@+id/button_start"
    android:layout_centerHorizontal="true"
    android:text="NO LOVE NO LIFE"

    />

    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="START"
        android:textSize="30sp"
        android:textStyle="bold"
        android:id="@+id/button_start"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:background="@drawable/btn_start"
        android:textColor="@color/white"

       android:layout_above="@+id/adView"
        />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
